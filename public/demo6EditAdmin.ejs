<!DOCTYPE html>
<html>
<head>
  <title>Win Win</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>

  <style type="text/css">
    .tbl_left{
	    padding-left: 18px !important;
	}
    .txt-mod{
      text-align: center;color:#FFF;font-size: 22px;
    }
    .fl-right{
      float: right;
    }
    .pad-spc{
      padding-top: 11px;
    }
    .no-bor-radius{
      border-radius: 0 !important;
    }
    .badge {
      display: inline-block;
      min-width: 10px;
      padding: 10px 40px !important;
      font-size: 16px !important;
      font-weight: 700;
      line-height: 1;
      color: #FFF !important;
      text-align: center;
      white-space: nowrap;
      vertical-align: middle;
      background-color: #337ab7 !important;
      border-radius: 10px;
    }
    .navbar{
      min-height: 60px !important;
    }
    .nav-tabs,.tab-content,.div-verify-btn{
      margin: 0 20px;
    }
    .btn-group-justified,.table-bordered,.div-profile,.div-password,.div-invite{
      margin: 20px 0;
    }
    .div-verify-btn{
        margin-top: 20px;
    }
    .verify{
        width:150px;
    }
    .required{color:red;}
    .topspc{
        margin-top: 10px;
    }
    .error{color:red;}
    .pad-left{padding-left: 0px !important; }
    .col_sm_12{width:100%;}
    .col_sm_4{width:33%;float:left;}
    .text-center-red{color:red;}
    .fb_share{padding-left:160px};
    .div-manageadmin{
      margin: 20px 0;
    }
    .frmbtntopspc{margin-top:24px;}
    .bg{margin-left : 20px; margin-right : 20px ; background-color:#286090}
    .liActive{color : white;}
    .liActive:hover{color:rgba(255, 255, 255, 0.54)}
    a:hover{text-decoration: none}
  </style>
</head>
<body>
	<nav class="navbar navbar-inverse no-bor-radius">
	  <div class="container-fluid pad-spc">
	    <div class="col-sm-4">
	      <div class="navbar-header txt-mod">
	        Win Win
	      </div>
	    </div>
	    <div class="col-sm-4 txt-mod">
	      <span class="badge"></span>
	    </div>
	    <div class="col-sm-4">
	      <div class="navbar-header txt-mod fl-right">
	        <!-- <button type="button" class="btn btn-danger" >Log Out</button> -->
	        <span style="font-size:12px;margin-right:15px;">Hi,<%= name%></span>
	        <a href="/api/products/demo6AdminLogout" class="btn btn-danger">Log Out</a>
	      </div>
	    </div>
	  </div>
	</nav>
	<!-- Begin breadcrumb -->
    <ol class="breadcrumb info bg">
      <li>
        <a href="/api/products/demo6AdminList" class="liActive"><i class="fa fa-home"></i></a>
      </li>
      <li>
        <a href="/api/products/demo6AdminList" class="liActive">View Admins</a>
      </li>
      <li class="active" style="color:rgba(255, 255, 255, 0.54)">Edit Admin</li>
    </ol>
    <!-- End Bread crumb -->
    <% if(messages) { %>
	    <div class="col-sm-12">
	      <div class="alert alert-danger alert-block fade in alert-dismissable alerttopbtnspc" id="msg_display_area">
	        <i class="fa fa-bell"></i> <span class="alertleftspc"><%= messages %></span>
	      </div>
	    </div>
	<% } %>	
  	<ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#administrators">Administrators</a></li> 
      <li class=""><a data-toggle="tab"  onclick="window.location.href='/api/products/demo6BuyersList'">Buyers</a></li> 
      <li class=""><a data-toggle="tab"  onclick="window.location.href='/api/products/demo6SellersList'">Sellers</a></li>
      <li class=""><a data-toggle="tab" id="recentTransaction" onclick="window.location.href='/api/products/demo6AdminListTransactions'">Transactions</a></li> 
  	</ul>
  	<div class="tab-content">
	  	<div id="administrators" style="margin-top:15px">
	  		<form method="POST" action="/api/products/demo6UpdateAdmin" role="login" name="editAdminForm" id="editAdminForm">
	  			<input type="hidden" name="admin_id" value="<%=editAdmin.admin_id%>" >
	  			<div class=" col-sm-12  div-manageadmin">
		  			<div class="col-sm-4">
		  				<label>Name</label>
		  				<input type="text" name="name"  id="name" placeholder="Enter your name" class="form-control " autofocus="" value="<%=editAdmin.name%>" tabindex="1">
		  				<span class="error" id="errName"></span>		
		  			</div>
		  			<div class="col-sm-4">
		  				<label>Email</label>
		  				<input type="text" name="email"  id="email" placeholder="Enter email" class="form-control" value="<%=editAdmin.email%>" tabindex="2" >
		  				<span class="error" id="errEmail"></span>		
		  			</div>
		  			<div class="col-sm-4 ">
		  				<label>Mobile</label>
		  				<input type="text" class="form-control " id="mobile" name='mobile' placeholder="Enter mobile number." value="<%=editAdmin.mobile%>" tabindex="3">
		  				<span class="error" id="errMobile"></span>		
		  			</div>
		  		</div>
				<div class="col-sm-12 pad-top" style="margin-top:15px">
					<div class="col-sm-4">
			            <div class="form-group">
			                <label>Status</label> 
			                <select class="form-control selectbox" tabindex="2" name="status" id="status" tabindex="4">
			                	<option value="Active" <%if (editAdmin.status=='Active') { %>
			                  		selected
			                  	<% } %>>Activate</option>
			                  	<option value="Inactive" <%if (editAdmin.status=='Inactive') { %>
			                  	selected
			                  	<% } %>>Deactivate</option>
			                </select>
			            </div>
			        </div>    
		  			<div class="col-sm-4">
		  				<button type="button" id="editAdmin" class="btn  btn-success frmbtntopspc" tabindex="5">Save Chages</button>
		  				<button type="button" id="cancelAdmin" class="btn  btn-danger frmbtntopspc " tabindex="6" onclick="window.location.href='/api/products/demo6AdminList'">Cancel</button>
		  			</div>
		  		</div>
		  	</form>
	  	</div>
	  	<div id="buyers" class="tab-pane fade">
	  	</div>
	  	<div id="sellers" class="tab-pane fade">
		</div>
	  	<div id="recentTransaction" class="tab-pane fade">
        </div>
	</div>  	
    <script>
    	$(document).ready(function() {
			$("#msg_display_area").fadeOut(3000);
		});
    	$('#cancelAdmin').click(function(){
    		$('#email').val('');
    		$('#name').val('');
    		$('#phone').val('');			
    		$('#errName').html('');
    		$('#errEmail').html('');
    		$('#errMobile').html('');
    	});
    	$('#editAdmin').click(function(){
			var name=$('#name').val();
			var email=$('#email').val();
			var mobile=$('#phone').val();
			var email_regExp=/^([a-z0-9_\.-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})$/;
			var mobile_regExp=/^\d{10}$/;
			var digit=mobile_regExp.test(mobile);
			var name_status = email_status = mobile_status = 0;
			if(name==""){
				$("#errName").html("Name required.");			
				name_status=0;	
			}
			else{
				$("#errName").html("");
				name_status=1;
			}
			if(email==""){
				$("#errEmail").html("Email id required.");
				email_status=0;
			}
			else{
				$("#errEmail").html("");			
				if(!email_regExp.test(email)){
					$('#errEmail').text("Enter email-Id in proper format.");	   
					email_status=0;
				}	
				else{
					$("#errEmail").html("");				
					email_status=1;
				}	
			}	
			if(mobile==""){
				$('#errMobile').html("Mobile number required.");
				mobile_status=0;
			}
			else{
				$('#errMobile').html("");
				mobile_status=1;
			}	
			if(name_status == 0 || email_status == 0 || mobile_status == 0 ){
				return false;
			}
			else{
				$('#editAdminForm').submit();
			}	
		});
	</script>
</body>
</html>